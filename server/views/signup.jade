extends layout

block content
  h1 Signup

  form(action="/signup", method="post")
    input(type="hidden", name="_csrf", value="#{ csrfToken }")
    div
      label Email:
      input(type="text", name="email")
    div
      label Password:
      input(type="password", name="password")
    div
      input(type="submit", value="Login")
